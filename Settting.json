{
  "context_servers": {
    
  },
  "agent_servers": {
  
  },
  "buffer_font_family": ".ZedMono",
  "buffer_line_height": {"custom": 1.5},
  
  "auto_update_extensions": {
    "live-server": false
  },
  "tab_bar": {
    "show_nav_history_buttons": false,
    "show": true
  },
  "status_bar": {
    "cursor_position_button": false,
    "active_language_button": true
  },
  "auto_indent_on_paste": true,
  "auto_indent": true,
  "gutter": {
    "folds": true
  },
  "debugger": {
    "dock": "bottom"
  },
  "notification_panel": {
    "button": true
  },
  "tabs": {
    "git_status": true,
    "file_icons": true
  },
  "title_bar": {
    "show_onboarding_banner": true,
    "show_project_items": true,
    "show_branch_name": true,
    "show_branch_icon": false
  },
  "file_finder": {
    "file_icons": true
  },
  "prettier": {
    "allowed": true
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "rounded_selection": true,
  "selection_highlight": true,
  "redact_private_values": false,
  "project_panel": {
    "auto_open": { "on_paste": true },
    "auto_fold_dirs": false,
    "starts_open": true,
    "auto_reveal_entries": true,
    "git_status": true,
    "entry_spacing": "comfortable",
    "dock": "left",
    "scrollbar": {
      "show": "auto"
    },
    "show_diagnostics": "all",
    "sticky_scroll": true,
    "indent_guides": {
      "show": "always"
    },
    "drag_and_drop": true,
    "folder_icons": true,
    "file_icons": true,
    "hide_gitignore": false,
    "button": true,
    "hide_root": false,
    "hide_hidden": false
  },
  "collaboration_panel": {
    "button": false
  },
  "outline_panel": {
    "folder_icons": true,
    "file_icons": true,
    "button": false
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "theme": {
    "mode": "system",
    "light": "Andromeda Dark",
    "dark": "Andromeda Dark"
  },
  "icon_theme": "Monospace Icon Theme - Dark",
  "base_keymap": "VSCode",

  // Fuentes y tamaños
  "buffer_font_size": 17.0,
  "ui_font_size": 17,

  // Desactivaste los popovers (importante)
  "hover_popover_enabled": true, // ⚠️ Cambiaste a true, debería ser false
  "auto_signature_help": false,
  "show_signature_help_after_edits": false,
  "show_completion_documentation": false,

  // Predictions desactivadas
  "show_edit_predictions": false,

  // Toolbar personalizado
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": true,
    "agent_review": true,
    "code_actions": false
  },

  // Indent guides mejoradas
  "indent_guides": {
    "enabled": true,
    "line_width": 1,
    "active_line_width": 2,
    "coloring": "indent_aware",
    "background_coloring": "disabled"
  },

  // Minimap
  "minimap": {
    "show": "always"
  },

  // Inlay hints desactivadas
  "inlay_hints": {
    "enabled": false
  },

  // Soft wrap
  "soft_wrap": "editor_width",

  // Autosave más rápido
  "autosave": {
    "after_delay": {
      "milliseconds": 500
    }
  },

  // Hard tabs
  "hard_tabs": true,
  "tab_size": 4,

  // Diagnósticos mejorados
  "diagnostics": {
    "button": true,
    "inline": {
      "update_debounce_ms": 100
    }
  },

  // Terminal
  "terminal": {
    "font_size": 14.0,
    "button": true,
    "cursor_shape": "bar"
  },

  // Agent con modelo personalizado
  "agent": {
    "default_profile": "minimal",
    "default_model": {
      "provider": "openai",
      "model": "gpt-4.1"
    }
  }
}
